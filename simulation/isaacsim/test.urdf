<?xml version="1.0"?>
<robot name="cube">
    <link name="cube_link">
        <inertial>
            <mass value="1.0"/> <!-- Mass of the cube -->
            <origin xyz="0 0 0" rpy="0 0 0"/> <!-- Position and orientation -->
            <inertia
                ixx="0.0833" 
                ixy="0.0" 
                ixz="0.0" 
                iyy="0.0833" 
                iyz="0.0" 
                izz="0.0833"/> <!-- Inertia matrix for a uniform cube -->
        </inertial>
        <visual>
            <geometry>
                <box size="1.0 1.0 1.0"/> <!-- Size of the cube (x, y, z) -->
            </geometry>
            <material name="blue">
                <color rgba="0 0 1 1"/> <!-- Color of the cube (RGBA) -->
            </material>
        </visual>
        <collision>
            <geometry>
                <box size="1.0 1.0 1.0"/> <!-- Collision geometry (same as visual) -->
            </geometry>
        </collision>
    </link>

    <joint name="fixed_joint" type="fixed">
        <parent link="world"/>
        <child link="cube_link"/>
        <origin xyz="0 0 0" rpy="0 0 0"/> <!-- Position and orientation of the joint -->
    </joint>
</robot>
