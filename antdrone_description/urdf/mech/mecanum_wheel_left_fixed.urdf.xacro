<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">
  
  <xacro:include filename="$(find antdrone_description)/urdf/mech/roller_left.urdf.xacro" />

  <xacro:macro name="mecanum_wheel_left" params="side end pos_x pos_y">
    
    <link name="${end}_${side}_wheel">
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="1.0"/>
        <inertia
          ixx="0.00015"
          ixy="0"
          ixz="0"
          iyy="0.00015" 
          iyz="0"
          izz="0.00025"/>
      </inertial>
      <visual>
        <geometry>
          <cylinder radius="0.07162" length="0.05"/>
        </geometry>
        <material name="gray">
          <color rgba="0.70 0.70 0.73 1.0"/>
        </material>
      </visual>
      <collision>
        <geometry>
          <cylinder radius="0.07162" length="0.05"/>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>10000000.0</mu>
              <mu2>10000000.0</mu2>
            </ode>
          </friction>
        </surface>
      </collision>
    </link>


    <joint name="base_link_to_${end}_${side}_wheel" type="continuous">
      <origin xyz="${pos_x} ${pos_y} 0"  rpy="1.57 0 0" />
      <parent link="base_link" />
      <child link="${end}_${side}_wheel" />

      <axis xyz="0 0 1"/>
      <dynamics damping="0.0" friction="0.1"/>
    </joint>

  </xacro:macro>
</robot>